<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_cfdi_uuid_form_inherit_view" model="ir.ui.view">
        <field name="name">account.move.cfdi.uuid.form.inherit.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="l10n_mx_edi.view_l10n_mx_edi_invoice_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='l10n_mx_edi_cfdi_uuid']" position="replace">
                <field name="l10n_mx_edi_cfdi_uuid"/>
                <field name="cargar_saldo_inicial" invisible="1"/>
                <field name="l10n_mx_edi_cfdi_uuid_cusom" attrs="{'invisible': [('cargar_saldo_inicial', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="account_journal_cfdi_uuid_form_inherti_view" model="ir.ui.view">
        <field name="name">account.journal.cfdi.uuid.form.inherit.view</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="cargar_saldo_inicial" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>
</odoo>